{% extends 'base.html.twig' %}

{% block title %}Seznam úkolů{% endblock %}

{% block body %}
    <h1>Seznam úkolů</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Název</th>
                <th>Popis</th>
                <th>Dokončeno</th>
                <th>Vytvořeno</th>
                <th>Stav</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.isCompleted ? 'Ano' : 'Ne' }}</td>
                <td>{{ task.createdAt ? task.createdAt|date('d.m.Y H:i:s') : '' }}</td>
                <td>
                    {# Tlačítko Toggle #}
                    <form method="post" action="{{ path('app_task_toggle', {'id': task.id}) }}" style="display: inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                        <button type="submit" class="btn btn-sm {{ task.isCompleted ? 'btn-success' : 'btn-outline-secondary' }}">
                            {{ task.isCompleted ? 'Hotovo ✅' : 'Dokončit' }}
                        </button>
                    </form>
                </td>
                <td>
                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-sm btn-info">Zobrazit</a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-sm btn-warning">Upravit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Nebyly nalezeny žádné záznamy</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
