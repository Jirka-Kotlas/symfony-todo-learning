{% extends 'base.html.twig' %}

{% block title %}Přihlášení{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="h3 mb-4 text-center">Přihlášení</h1>
                
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        Jste přihlášen jako {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Odhlásit se</a>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Heslo</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-check mb-3">
                        <input type="checkbox" name="_remember_me" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Zapamatovat si mě
                        </label>
                    </div>

                    <button class="btn btn-primary w-100 mb-3" type="submit">
                        Přihlásit se
                    </button>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">Ještě nemáte účet?</p>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-secondary w-100 mt-2">
                            Zaregistrovat se
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
