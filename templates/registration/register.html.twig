{% extends 'base.html.twig' %}

{% block title %}Registrace{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="h3 mb-4 text-center">Registrace</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'vas@email.cz'}}) }}
                        <div class="text-danger">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Heslo', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Zadejte silné heslo'}}) }}
                        <div class="text-danger">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, 'Souhlasím s podmínkami', {'label_attr': {'class': 'form-check-label'}}) }}
                        <div class="text-danger">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">Registrovat se</button>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">Již máte účet?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100 mt-2">
                            Přihlásit se
                        </a>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
